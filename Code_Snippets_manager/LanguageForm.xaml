<Window x:Class="Code_Snippets_manager.LanguageForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Code_Snippets_manager"
        mc:Ignorable="d"

        Title="Manage Languages" Height="400" Width="500"
        Background="#F7F7F7" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Language Manager" FontSize="20" FontWeight="Bold" Foreground="#333" Margin="0,0,0,10"/>

        <!-- DataGrid for Existing Languages -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Languages}" 
                  SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  RowHeaderWidth="0"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Language" Binding="{Binding TheLanguage}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Language Input Area -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,10,0,0">
            <TextBlock Text="Language Name" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding NewLanguageName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Height="30" 
                     Padding="5"
                     BorderBrush="#CCC" 
                     Background="White"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Save" 
                        Command="{Binding SaveLanguageCommand}"
                        Background="#4CAF50" 
                        Foreground="White" 
                        Padding="8,5"
                        Margin="0,0,10,0" Click="Button_Click"/>

                <Button Content="Delete" 
                        Command="{Binding DeleteLanguageCommand}"
                        Background="#E53935" 
                        Foreground="White" 
                        Padding="8,5" Click="Button_Click_1"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
